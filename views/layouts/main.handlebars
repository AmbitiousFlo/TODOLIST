<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Master</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <nav class="flex items-center justify-between flex-wrap bg-red-500 p-6">
    <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0 text-red-200 hover:text-white mr-4">
      Home
    </a>
    <a href="#responsive-header" class="block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4">
      Dashboard
    </a>
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <span role="img" aria-label="computer">üñ≥</span>
        <a href="/">Task Master</a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/profile">profile</a> |
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a> |
        <a href="/login">signup</a>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}

      <!-- Insert the Handlebars template here -->
      <script id="template" type="text/x-handlebars-template">
        <div class="container">
          <div style="margin-top: 80px;" class="text-center p-5 mb-4 bg-light">
            <h1 class="display-4">{{title}} <span role="img" aria-label="Memo">üìù</span></h1>
            <h4 class="mt-4">{{subtitle}}</h4>
            <a class="btn btn-primary btn-lg mt-4" href="{{link}}" role="button">{{buttonText}}</a>
          </div>
        </div>
      </script>
    </main>
    <footer>

    </footer>
  </nav>

  <!-- Render script for logged-in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <!-- Render the Handlebars template -->
  <script>
    // Define data for the Handlebars template
    var data = {
      title: "Task Master",
      subtitle: "Unleash Your Potential: Remember, Record, Succeed!",
      link: "./notes.html",
      buttonText: "Get Started"
    };

    // Compile the Handlebars template
    var source = document.getElementById("template").innerHTML;
    var template = Handlebars.compile(source);

    // Render the template with the data and insert it into the body
    var html = template(data);
    document.body.innerHTML += html;
  </script>
</body>

</html>
